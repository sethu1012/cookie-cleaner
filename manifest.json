{
  "name": "Cookie Cleaner",
  "version": "1.0",
  "description": "Clear cookies from the sites you visit with a single click.",
  "permissions": ["cookies", "tabs", "http://*/*", "https://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "name": "Clear cookies"
  },
  "icons": {
    "16": "images/logo-16.png",
    "32": "images/logo-32.png",
    "48": "images/logo-48.png",
    "128": "images/logo-128.png"
  },
  "manifest_version": 2
}
